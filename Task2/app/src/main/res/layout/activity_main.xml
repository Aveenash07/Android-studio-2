<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5ACAC"
    android:backgroundTint="#A59494"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="323dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/angry" />

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="#9476CA"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <EditText
            android:id="@+id/msg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:gravity="start|center_horizontal"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:text="I am HUNGRY !"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#C17474"
            android:backgroundTint="#5C3C3C"
            android:gravity="start"
            android:onClick="changeImage"
            android:text="EAT COOKIE" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>